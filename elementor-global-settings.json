  "button_styles": {
    "description": "Configure these button styles in each Button widget or save as Global Widget",
    "primary_button": {
      "name": "Primary Button (White)",
      "typography": {
        "font_family": "Montserrat",
        "font_size": {
          "desktop": "24px",
          "mobile": "18px"
        },
        "font_weight": "700",
        "letter_spacing": "-0.48px",
        "line_height": "1.5"
      },
      "style": {
        "background_color": "#FFFFFF",
        "text_color": "#262525",
        "border_radius": "40px",
        "padding": {
          "desktop": "16px 40px",
          "mobile": "12px 32px"
        },
        "box_shadow": {
          "horizontal": "-8px",
          "vertical": "12px",
          "blur": "31px",
          "spread": "0px",
          "color": "rgba(0,0,0,0.1)"
        }
      },
      "hover": {
        "background_color": "#7ED321",
        "text_color": "#262525",
        "transform": "translateY(-2px)",
        "box_shadow_blur": "60px"
      }
    },
    "secondary_button": {
      "name": "Secondary Button (Outline)",
      "typography": {
        "font_family": "Montserrat",
        "font_size": {
          "desktop": "24px",
          "mobile": "18px"
        },
        "font_weight": "700",
        "letter_spacing": "-0.48px",
        "line_height": "1.5"
      },
      "style": {
        "background_color": "transparent",
        "text_color": "#FFFFFF",
        "border": {
          "width": "2px",
          "style": "solid",
          "color": "#FFFFFF"
        },
        "border_radius": "40px",
        "padding": {
          "desktop": "16px 40px",
          "mobile": "12px 32px"
        }
      },
      "hover": {
        "background_color": "#FFFFFF",
        "text_color": "#262525",
        "border_color": "#FFFFFF"
      }
    },
    "cta_button_small": {
      "name": "CTA Button Small (Header)",
      "typography": {
        "font_family": "Montserrat",
        "font_size": "16px",
        "font_weight": "700",
        "letter_spacing": "-0.32px",
        "text_transform": "uppercase"
      },
      "style": {
        "background_color": "#FFFFFF",
        "text_color": "#262525",
        "border_radius": "40px",
        "padding": "16px 24px",
        "box_shadow": {
          "horizontal": "0px",
          "vertical": "4px",
          "blur": "4px",
          "spread": "0px",
          "color": "rgba(0,0,0,0.25)"
        }
      },
      "hover": {
        "background_color": "#7ED321",
        "transform": "translateY(-2px)",
        "box_shadow_vertical": "8px",
        "box_shadow_blur": "16px"
      }
    }
